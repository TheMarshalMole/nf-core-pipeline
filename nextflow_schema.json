{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/drop/drop/master/nextflow_schema.json",
    "title": "drop/drop pipeline parameters",
    "description": "",
    "type": "object",
    "definitions": {
        "gene_annotations": {
            "title": "Gene Annotations",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "gtf": {
                    "type": "string",
                    "pattern": "^\\S+\\.gtf",
                    "description": "The input must be of format: ANNOTATION1:PATH1, ANNOTATION2:PATH2"
                },
                "bams": {
                    "type": "string",
                    "pattern": "^\\S+",
                    "description": "The path to bams folder"
                }
            },
            "required": [
                "gtf",
                "bams"
            ]
        },
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "outdir"
            ],
            "properties": {
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open"
                }
            }
        },
        "aberrant_expression": {
            "title": "Aberrant Expression",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "aberrantexpression": {
                    "type": "boolean",
                    "description": "Execute aberrant expression pipeline",
                    "default": true
                },
                "groups": {
                    "type": "string",
                    "default": "outrider, outrider_external",
                    "pattern": "([a-z]|_|,| )+"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/gene_annotations"
        },
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/aberrant_expression"
        }
    ]
}
